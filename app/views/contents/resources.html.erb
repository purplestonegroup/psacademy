					<p><%= t('.applicationstojobstext') %></p>
				</div>
				<div class="three columns offset-by-one">
					<h3><%= t('.training') %></h3>
					<p><%= t('.trainingtext') %></p>
				</div>
				
			</div>

			<div class="row">
				<p><%= t('.consultation') %></p>

