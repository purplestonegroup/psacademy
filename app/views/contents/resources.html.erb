			<p><i class="fa fa-arrow-circle-down"></i> <%= active_link_to "Internships", resources_path(:anchor => "internship"), class: "link" %><br />
			<i class="fa fa-arrow-circle-down"></i> <%= active_link_to "Career Advice", resources_path(:anchor => "career"), class: "link" %><br />
			<i class="fa fa-arrow-circle-down"></i> <%= active_link_to "Accomodation", resources_path(:anchor => "acommodation"), class: "link" %>
