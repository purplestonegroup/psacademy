<section class="video_form">

  <div class="eight columns slide">
    <ul class="bxslider">
      <li>
        <h2>We use accelerated learning techniques with our own Learn Realquick<sup>TM</sup> method</h2>
        <div class="transp"></div>
        <%= image_tag "slide_girl.jpg" %>
      </li>
      <li>
        <h2>Our English Courses are structured to cater for your level and objectives</h2>
        <%= image_tag "slide_books.jpg" %>
        <div class="transp"></div>
      </li>
      <li>
        <h2>Looking for short courses to improve your English quickly to get a job?</h2>
        <%= image_tag "slide_boy.jpg" %>
        <div class="transp"></div>
      </li>
    </ul>
  </div>

  <%= render :partial => 'shared/aweberform' %>

</section>

<section class="eight columns">

    <div class="postslist">
      <% @posts.limit(1).each do |post| %>
        <div class="single_post group">

            <div class="post_details">
	            <h2><%= post.title %></h2>
	            <%= image_tag post.image(:header), class: "post_image" %>
	            <p><%= truncate post.body, length: 100 %></p>
              <p class="button"><%= link_to "READ MORE", post_path(post) %></p>
            </div>

        </div>
      <% end %>
    </div>

</section>

<section class="four columns">
<%= render "postsmenu" %>
</section>